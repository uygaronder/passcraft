{
    "manifest_version": 3,
    "name": "Passcraft",
    "version": "0.1",
    "description": "Passcraft is an open source password generator. It is an easy and fast way to generate secure passwords.",
    "action": {
        "default_popup": "main.html",
        "default_title": "Passcraft",
        "default_icon": "./res/passcraft-website-favicon-color.png"
    },
    "icons": {
        "16": "./res/passcraft-website-favicon-color.png",
        "48": "./res/passcraft-website-favicon-color.png",
        "128": "./res/passcraft-website-favicon-color.png"
    },
    "permissions": [
        "storage"
    ]
}